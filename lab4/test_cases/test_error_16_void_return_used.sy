// =====================================================
// 测试错误类型 16: void 函数返回值被使用
// =====================================================

void do_nothing() {
    return;
}

void print_hello() {
    // 模拟打印操作
    int dummy = 1;
    return;
}

int get_value() {
    return 42;
}

// =============== 正确组 (不触发错误) ===============
int main() {
    // 正确: void 函数作为语句调用
    do_nothing();
    print_hello();
    
    // 正确: 非 void 函数返回值可以使用
    int a = get_value();
    int b = get_value() + 10;
    
    return 0;
}

// =============== 对照组 (触发 Error 16) ===============
// 注意: Error 16 需要更复杂的上下文分析才能检测
// 当前实现可能不支持此错误类型的完整检测
// 以下代码演示了应该触发错误的情况

int error_case() {
    // Error 16: void 函数返回值被使用
    int x = do_nothing();  // 这里尝试使用 void 返回值（如果支持）
    
    int y = print_hello() + 1;  // void 返回值参与运算（如果支持）
    
    return 0;
}