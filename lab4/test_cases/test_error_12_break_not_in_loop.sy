// =====================================================
// 测试错误类型 12: break 语句不在循环体内
// =====================================================

// =============== 正确组 (不触发错误) ===============
int main() {
    int i = 0;
    
    // 正确: break 在 while 循环内
    while (i < 10) {
        if (i == 5) {
            break;
        }
        i = i + 1;
    }
    
    // 正确: break 在嵌套循环内
    int j = 0;
    while (i < 20) {
        while (j < 5) {
            if (j == 3) {
                break;  // 退出内层循环
            }
            j = j + 1;
        }
        i = i + 1;
    }
    
    return 0;
}

// =============== 对照组 (触发 Error 12) ===============
int error_case() {
    // Error 12: break 不在循环体内
    break;  // Error 12: break statement not within a loop
    
    if (1) {
        break;  // Error 12: break statement not within a loop
    }
    
    return 0;
}