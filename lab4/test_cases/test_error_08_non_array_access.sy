// =====================================================
// 测试错误类型 8: 非数组变量使用数组访问
// =====================================================

// =============== 正确组 (不触发错误) ===============
int main() {
    // 正确: 数组变量使用数组访问
    int arr[10];
    arr[0] = 1;
    arr[5] = 2;
    
    int matrix[3][3];
    matrix[0][0] = 1;
    matrix[1][1] = 2;
    
    // 正确: 普通变量不使用数组访问
    int x = 10;
    int y = x + 5;
    
    return 0;
}

// =============== 对照组 (触发 Error 8) ===============
int error_case() {
    int simple_var = 42;
    float my_float = 3.14;
    
    // Error 8: 非数组变量使用数组访问
    simple_var[0] = 1;  // Error 8: Variable 'simple_var' is not an array
    
    simple_var[1][2] = 3;  // Error 8: Variable 'simple_var' is not an array
    
    int x = my_float[0];  // Error 8: Variable 'my_float' is not an array
    
    return 0;
}