// =====================================================
// 测试错误类型 3: 调用未定义的函数
// =====================================================

// 声明的辅助函数
int helper(int x) {
    return x * 2;
}

int add(int a, int b) {
    return a + b;
}

// =============== 正确组 (不触发错误) ===============
int main() {
    // 正确: 调用已定义的函数
    int a = helper(10);
    int b = add(5, 3);
    
    // 正确: 递归调用
    int c = factorial(5);
    
    return 0;
}

int factorial(int n) {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);  // 正确: 递归调用
}

// =============== 对照组 (触发 Error 3) ===============
int error_case() {
    // Error 3: 调用未定义的函数
    int a = unknown_func(1, 2);  // Error 3: Undefined function 'unknown_func'
    
    no_such_function();  // Error 3: Undefined function 'no_such_function'
    
    int b = compute(10);  // Error 3: Undefined function 'compute'
    
    return 0;
}