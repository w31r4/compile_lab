// =====================================================
// 测试错误类型 6: 函数名当普通变量引用
// =====================================================

int my_function() {
    return 42;
}

int add(int a, int b) {
    return a + b;
}

// =============== 正确组 (不触发错误) ===============
int main() {
    // 正确: 正常调用函数
    int a = my_function();
    int b = add(10, 20);
    
    // 正确: 使用普通变量
    int x = 100;
    int y = x + 50;
    
    return 0;
}

// =============== 对照组 (触发 Error 6) ===============
int error_case() {
    // Error 6: 函数名当普通变量引用
    my_function = 999;  // Error 6: Function 'my_function' used as variable
    
    int z = my_function + 1;  // Error 6: Function 'my_function' used as variable
    
    add = 100;  // Error 6: Function 'add' used as variable
    
    return 0;
}