// 浮点数测试：float类型, 浮点数常量, 隐式类型转换
// 覆盖规则：BType (float), FloatConst, Hexadecimal Float
float circle_area(float r) {
    const float PI = 3.14159;
    return PI * r * r;
}

int main() {
    int student_id = 20220001;
    float f1 = 1.5;
    float f2 = 1.2e-1;
    float f3 = 0x1.p+1; // Hex float: 1.0 * 2^1 = 2.0
    
    int i = 10;
    float f4 = i; // int -> float implicit conversion
    
    float area = circle_area(f3);
    
    if (area > 12.0) return 1;
    return 0;
}